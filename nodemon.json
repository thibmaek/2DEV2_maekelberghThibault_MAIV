{

  "ext": "js, jsx, handlebars, hbs , json, html",

  "watch": [
    "/helpers/*",
    "/templates/*",
    "/modules/*",
    "/plugins/*",
    "/models/*",
    "/routes/*"
  ],

  "ignore": [
    "/_helpers/*",
    "/_js/*",
    "/_scss/*",
    "/node_modules/*",
    "/public/*",
    "_config.js",
    "gulpfile.js",
    "package.json",
    "webpack.config.js"
  ],

  "events": {
    "start": "eslint */ --ignore-pattern _js/ --fix --format=node_modules/eslint-formatter-pretty"
  }

}
